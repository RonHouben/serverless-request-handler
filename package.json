{
  "name": "serverless-request-handler",
  "description": "A request handler that uses class-transformer and class-validator to create a type-safe serverless handler!",
  "version": "1.5.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/rubenvanrooij/serverless-request-handler.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf coverage dist",
    "build": "yarn clean && tsc",
    "format": "prettier --write {src,test}/**/*.ts",
    "lint": "tslint --project . src/**/*.ts",
    "prepare": "install-self-peers -- --ignore-scripts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "semantic-release": "semantic-release"
  },
  "author": "Ruben v. Rooij",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@team-griffin/install-self-peers": "^1.1.1",
    "@types/aws-lambda": "^8.10.36",
    "@types/jest": "^27.4.0",
    "@types/prettier": "^2.4.3",
    "@types/reflect-metadata": "^0.1.0",
    "@types/rimraf": "^3.0.2",
    "codecov": "^3.6.1",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.0",
    "semantic-release": "^19.0.2",
    "ts-jest": "^27.1.3",
    "tslint": "6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "aws-lambda": "^1.0.5",
    "http-status-codes": "^2.2.0",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.2.1"
  },
  "peerDependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2"
  }
}
